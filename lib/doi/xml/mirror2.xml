            <property type="label">Origin site - USA.</property>
            <property type="detail">The Corporation for National Research Initiatives, Reston, Virginia, U.S.A.</property>
            <property type="access">:default</property>
          </item>
          <item>
            <!-- UK Mirror -->
            <resource>http://mirrored.ukoln.ac.uk/lis-journals/dlib/dlib/dlib/july01/07contents.html</resource>
