          </item>
          <item>
            <!-- Argentine Mirror -->
            <resource>http://www.dlib.org.ar/dlib/july01/07contents.html</resource>
            <property type="type">dlib:Mirror</property>
            <property type="label">Mirror site - Argentina.</property>
            <property type="detail">Universidad de Belgrano, Buenos Aires, Argentina</property>
          </item>
        </collection>
        <property type="type">doi:Profile</property>
      </nest>
    </collection>
  </nest>
